{
  "name": "tree-sitter-actions",
  "version": "0.9.2",
  "description": "parser for the actions file as defined by the specification therein",
  "repository": "https://github.com/clearheadtodo-devs/tree-sitter-actions",
  "license": "MIT",
  "author": {
    "name": "Darrion Burgess",
    "email": "darrionburgess@gmail.com"
  },
  "main": "bindings/node",
  "types": "bindings/node",
  "exports": {
    ".": "./lib/index.js",
    "./grammar": "./bindings/node/index.js",
    "./parser": "./parser.js",
    "./patterns": "./patterns.js",
    "./schema": "./schema/actions.schema.json",
    "./schema/sql": "./schema/actions.sql"
  },
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "actions"
  ],
  "files": [
    "grammar.js",
    "patterns.js",
    "tree-sitter.json",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm",
    "parser.js",
    "lib/*",
    "schema.json",
    "schema/**"
  ],
  "dependencies": {
    "node-addon-api": "^8.2.1",
    "node-gyp-build": "^4.8.2",
    "tree-sitter": "^0.21.1"
  },
  "devDependencies": {
    "ajv": "^8.12.0",
    "n3": "^1.26.0",
    "prebuildify": "^6.0.1",
    "tree-sitter-cli": "^0.25.1"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "node --test bindings/node/*_test.js && node --test test/parser_test.js",
    "test:grammar": "tree-sitter test",
    "test:schema": "node test/schema_validation_test.js",
    "test:formatting": "node scripts/test_formatting.js",
    "test:all": "npm run test:grammar && npm run test:schema && npm run test:formatting && npm test",
    "test-parser": "node --test test/parser_test.js",
    "parse": "node parser.js",
    "parse-simple": "node parser.js test/files/simple.actions",
    "generate:mapping": "node scripts/generate-syntax-mapping.js --output syntax_mapping.json",
    "generate:grammar": "node src/grammar_generator.js --generate-rules",
    "generate:schema": "node scripts/generate-schema.js",
    "generate": "npm run generate:mapping && npm run generate:grammar && npm run generate:schema",
    "build:parser": "tree-sitter generate && tree-sitter build && npm run generate:schema",
    "regen:trees": "node scripts/generate_trees.js",
    "regen:corpus": "node scripts/generate_tests.js",
    "regen:test": "node scripts/regenerate_all.js",
    "regen:verify": "npm run regen:test && npm run test:grammar"
  }
}
